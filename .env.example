# AgriDirect App Environment Variables Template
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# ================================
# FIREBASE CONFIGURATION
# ================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_WEB_API_KEY=your_firebase_web_api_key

# ================================
# WEATHER API CONFIGURATION
# ================================
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# ================================
# MACHINE LEARNING SERVICES
# ================================
ML_API_BASE_URL=https://your-ml-service-url.com/api/v1
ML_API_KEY=your_ml_service_api_key
PLANT_DISEASE_MODEL_URL=https://your-model-storage.com/plant_disease_model.tflite
CROP_PREDICTION_MODEL_URL=https://your-model-storage.com/crop_recommendation_model.tflite

# ================================
# MAPS AND LOCATION SERVICES
# ================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
LOCATION_IQ_API_KEY=your_locationiq_api_key

# ================================
# NEWS AND CONTENT SERVICES
# ================================
NEWS_API_KEY=your_news_api_key_here
CONTENT_API_BASE_URL=https://your-content-api.com/v1

# ================================
# PUSH NOTIFICATIONS
# ================================
FCM_SERVER_KEY=your_fcm_server_key
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# ================================
# THIRD PARTY INTEGRATIONS
# ================================
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
FIRESTORE_DATABASE_ID=(default)

# ================================
# STORAGE CONFIGURATION
# ================================
FIREBASE_STORAGE_URL=gs://your-project.appspot.com
CDN_BASE_URL=https://cdn.your-domain.com

# ================================
# APP CONFIGURATION
# ================================
APP_VERSION=1.0.0
BUILD_NUMBER=1
ENVIRONMENT=development
DEBUG_MODE=true
ENABLE_ANALYTICS=false

# ================================
# SECURITY KEYS
# ================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
APP_SECRET=your_app_secret_key_here

# ================================
# SOCIAL MEDIA INTEGRATION
# ================================
FACEBOOK_APP_ID=your_facebook_app_id
GOOGLE_CLIENT_ID=your_google_oauth_client_id
TWITTER_API_KEY=your_twitter_api_key

# ================================
# MONITORING AND ANALYTICS
# ================================
CRASHLYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# ================================
# EMAIL SERVICES
# ================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password